<resources  xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="TVAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorPrimary</item>
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
  </style>

  <style name="TVShows"/>

  <style name="TVShows.recyclerview">
    <item name="android:clipToPadding">false</item>
  </style>

  <style name="TVShows.recyclerview.shows">
    <item name="layoutManager">androidx.recyclerview.widget.StaggeredGridLayoutManager</item>
    <item name="spanCount">@integer/default_span_count</item>
    <item name="android:padding">@dimen/spacing_normal</item>
  </style>

  <style name="TVShows.cardviews">
    <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
  </style>

  <style name="TVShows.cardviews.shows">
    <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/lift_animator</item>
    <item name="android:background">@android:color/white</item>
    <item name="cardUseCompatPadding">true</item>
  </style>

  <style name="TVShows.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
    <item name="android:indeterminateTint" tools:targetApi="lollipop">@color/white</item>
  </style>

</resources>
